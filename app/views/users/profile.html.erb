<div class="index-bar">
  <h2 class="user-name"><%= @user.first_name %> <%= @user.last_name %></h2>
  <% if @user == current_user %>
  <%= link_to 'Edit profile', edit_user_profile_path %>
  <% end %>
</div>

<div class="container">
  <div class="row">
      <div class="user-profile">
        <div class="user-profile-picture">
        <% avatar_url = @user.facebook_picture_url || "http://placehold.it/100x100" %>
        <%= image_tag avatar_url%>
        </div>
        <p><span>Beer brand :</span><%= @user.beer_brand %></p>
        <p><span> Bio : </span><%= @user.bio %></p>
        <p><span> City : </span><%= @user.city %> </p>
        <p><span><%= @user.first_name %>'s beers :</span></p>
      </div>
  </div>
</div>

