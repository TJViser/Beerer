

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <h1><%= @user.first_name %> <%= @user.last_name %> </h1>
      <% avatar_url = @user.facebook_picture_url || "http://placehold.it/100x100" %>
      <%= image_tag avatar_url%>
      <p> Beer brand : <%= @user.beer_brand %></p>
      <p> Bio : <%= @user.bio %></p>
      <p><%= @user.first_name %>'s beers :</p>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @user_coordinates %>;
      alert('User coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>

<%= render 'shared/cards', beers: @user.beers %>
