        <div class="card col-xs-12 col-sm-6 col-md-3">
          <div class="card-deck-wrapper">
            <div class="card-picture">
              <%= cl_image_tag beer.photo, height: 200, width: 150, crop: :fill  %>
            </div>
            <div class="card-block">
              <div class="card-info">
                <h4 class="card-title"><%= beer.name %></h4>
                <p class="card-user"><%= beer.user.first_name %> <%= beer.user.last_name %></p>
                <p class="card-user"><%= beer.conditionning %></p>
                <p class="card-text"><%= beer.description %></p>
              </div>
